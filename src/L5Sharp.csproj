<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>9</LangVersion>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <Nullable>enable</Nullable>
        <Title>L5Sharp</Title>
        <Authors>Timothy Nunnink</Authors>
        <Version>1.0.0</Version>
        <AssemblyVersion>1.0.0.0</AssemblyVersion>
        <FileVersion>1.0.0.0</FileVersion>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <TargetFramework>netstandard2.1</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Ardalis.SmartEnum" Version="2.0.1" />
    </ItemGroup>

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>L5Sharp.Internal.Tests</_Parameter1>
        </AssemblyAttribute>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
            <_Parameter1>L5Sharp.Serialization.Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\Predefined.db" />
      <None Remove="L5Sharp.sln.DotSettings" />
      <None Remove="Builders\**" />
      <None Remove="Instructions\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\Predefined.xml" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\L5X.xsd" />
      <EmbeddedResource Include="Resources\L5X.xsd">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </EmbeddedResource>
      <EmbeddedResource Remove="Builders\**" />
      <EmbeddedResource Remove="Instructions\**" />
      <None Remove="Resources\CatalogSvcsDatabaseV2.xml" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="Builders\**" />
      <Compile Remove="Instructions\**" />
    </ItemGroup>

</Project>
